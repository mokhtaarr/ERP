@using Inv.WebUI.Resources
@{
    Layout = "~/Views/Shared/Layout.cshtml";
    ViewBag.Title = SystemResource.MovementNotebook;
}

<div class="row bg-white p-3 border border-1 rounded shadow-sm">
    <label class="col-md-1">@SystemResource.NotebookCode</label>
    <div class="col-md-3">
        <input class="form-control" type="text" name="PrefixCode" id="PrefixCode" value="" placeholder="@SystemResource.NotebookCode" />
    </div>

    <div class="col-md-1 text-center">
        <button type="button" class="src-btn btn btn-warning" id="btnSys_BooksSearch" name="btnSearch">
            <i class="fa fa-search"></i>
        </button>
    </div>

    <label class="col-md-1">@SystemResource.DocumentType</label>
    <div class="col-md-3">
        <select id="TermType" name="TermType" class="form-control">
            <option value="null">@SystemResource.DocumentType</option>
        </select>
    </div>

    <div class="col-md-3">
        <label class="col-md-12 text-center mb-3" style="color:#bd3e3e">@SystemResource.MigrationMethod</label>
        <div class="col-md-12 d-flex align-items-center justify-content-center">
            <label for="PostType2" class="custom-control custom-radio custom-control-inline">
                <input type="radio" name="PostType" id="PostType2" class="custom-control-input"><span class="custom-control-label">@SystemResource.NotCarriedOver</span>
            </label>
            <label for="PostType1" class="custom-control custom-radio custom-control-inline">
                <input type="radio" name="PostType" id="PostType1" class="custom-control-input"><span class="custom-control-label">@SystemResource.WithSave</span>
            </label>

            @*<label for="NotCarriedOver" class="">@SystemResource.NotCarriedOver</label>
                <input class="form-control" type="radio" name="PostType" id="MigrationMethod" value="" />

                <label for="WithSave" class="">@SystemResource.WithSave</label>
                <input class="form-control" type="radio" name="PostType" id="WithSave" value="" />*@
        </div>
    </div>

    <div class="col-md-4 d-flex align-items-center">
        <label class="">@SystemResource.Name_Arabic</label>
        <input class="form-control" type="text" name="BookNameAR" id="BookNameAR" value="" placeholder="@SystemResource.Name_Arabic" />
    </div>

    <div class="col-md-4 d-flex align-items-center">
        <label class="">@SystemResource.Name_English</label>
        <input class="form-control" type="text" name="BookNameEN" id="BookNameEN" value="" placeholder="@SystemResource.Name_English" />
    </div>

    <div class="col-md-2 d-flex align-items-center">
        <label for="AutoSerial" class="">@SystemResource.AutoSequence</label>
        <div class="switch-button switch-button-yesno">
            <input type="checkbox" name="AutoSerial" id="AutoSerial"><span>
                <label for="AutoSerial"></label>
            </span>
        </div>
        @*<input class="form-control" type="checkbox" name="AutoSerial" id="AutoSerial" value="" />*@
    </div>

    <div class="col-md-2 d-flex align-items-center align-items-center">
        <label for="IsDefault" class="">@SystemResource.MasterNotebook</label>
        <div class="switch-button switch-button-yesno">
            <input type="checkbox" name="IsDefault" id="IsDefault"><span>
                <label for="IsDefault"></label>
            </span>
        </div>
        @*<input class="form-control" type="checkbox" name="IsDefault" id="IsDefault" value="" />*@
    </div>

    <div class="col-md-3 d-flex align-items-center align-items-center">
        <label for="SystemIssuedOnly" class="">@SystemResource.ForAutomaticallyExportedDocumentsOnly</label>
        <div class="switch-button switch-button-yesno">
            <input type="checkbox" name="SystemIssuedOnly" id="SystemIssuedOnly"><span>
                <label for="SystemIssuedOnly"></label>
            </span>
        </div>
        @*<input class="form-control" type="checkbox" name="SystemIssuedOnly" id="SystemIssuedOnly" value="" />*@
    </div>

    <div class="col-md-4 d-flex align-items-center align-items-center">
        <label class="">@SystemResource.Branch</label>
        <select id="StoreId" name="StoreId" class="form-control">
            <option value="null">@SystemResource.Branch</option>
        </select>
    </div>

    <div class="col-md-5 d-flex align-items-center align-items-center">
        <label class="">@SystemResource.Users</label>
        <select id="UserId" name="UserId" class="form-control">
            <option value="null">@SystemResource.Users</option>
        </select>
    </div>

    <div class="col-md-4 d-flex align-items-center align-items-center">
        <label class="">@SystemResource.StartingNumber</label>
        <input class="form-control" type="number" name="StartNum" id="StartNum" value="" placeholder="@SystemResource.StartingNumber" />
    </div>

    <div class="col-md-4 d-flex align-items-center align-items-center">
        <label class="">@SystemResource.EndingNumber</label>
        <input class="form-control" type="number" name="EndNum" id="EndNum" value="" placeholder="@SystemResource.EndingNumber" />
    </div>

    <div class="col-md-4 d-flex align-items-center align-items-center">
        <label class="">@SystemResource.CurrentPage</label>
        <input class="form-control" type="number" name="Counter" disabled id="Counter" value="" placeholder="@SystemResource.CurrentPage" />
    </div>
</div>

<div class="row bg-white p-3 border border-1 rounded shadow-sm mt-4" style="overflow:auto">
    <table id="divBooksGrid" class="col-12" data-main="mainTable"></table>
</div>

<script src="~/ClientApp/Pages/Acc/Sys_Books.js"></script>