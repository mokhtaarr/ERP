@using Inv.WebUI.Resources

@{
    Layout = "~/Views/Shared/Layout.cshtml";
    ViewBag.Title = SystemResource.Box;
}

<div class="row">
    <div class="col-md-12 Div_Tree bg-white p-3">
        <nav>
            <div class="nav nav-tabs" id="nav-tab" role="tablist">
                <a class="nav-item nav-link active" data-toggle="tab" href="#BasicData"><i class="fa fa-book"></i> @SystemResource.BasicData</a>
                <a class="nav-item nav-link" data-toggle="tab" href="#Users"><i class="fa fa-users"></i> @SystemResource.Users</a>
                <a class="nav-item nav-link" data-toggle="tab" href="#Balance"><i class="far fa-chart-bar"></i> @SystemResource.Balance</a>
            </div>
        </nav>

        <div class="tab-content text-center row" id="nav-tabContent">
            <div id="BasicData" class="tab-pane fade show active col-12">
                <div class="row">
                    <div class="col-md-3 d-flex">
                        <label class="">@SystemResource.Code</label>
                        <input class="form-control" type="text" name="BoxCode" id="BoxCode" value="" placeholder="@SystemResource.Code" />
                    </div>
                    <div class="col-1 text-center">
                        <button type="button" class="src-btn btn btn-warning" id="btnMS_BoxBankSearch" name="btnSearch">
                            <i class="fa fa-search"></i>
                        </button>
                    </div>
                    <div class="col-md-4 d-flex">
                        <label class="">@SystemResource.Name_Arabic</label>
                        <input class="form-control" type="text" name="DESCA" id="DESCA" value="" placeholder="@SystemResource.Name_Arabic" />
                    </div>
                    <div class="col-md-4 d-flex">
                        <label class="">@SystemResource.Name_English</label>
                        <input class="form-control" type="text" name="DESCE" id="DESCE" value="" placeholder="@SystemResource.Name_English" />
                    </div>

                    <div class="col-md-4 d-flex">
                        <label class="">@SystemResource.ResponsiblePerson</label>
                        <input class="form-control" type="text" name="KeeperName" id="KeeperName" value="" placeholder="@SystemResource.ResponsiblePerson" />
                    </div>

                    <div class="d-flex align-items-center justify-content-around col-md-2">
                        <label for="IsActive" class="col-md-2">@SystemResource.IsActive</label>
                        <div class="switch-button switch-button-yesno">
                            <input type="checkbox" name="IsActive" id="IsActive"><span>
                                <label for="IsActive"></label>
                            </span>
                        </div>
                    </div>

                    <div class="col-md-4 d-flex">
                        <label class="">@SystemResource.Account2</label>
                        <select id="AccountId" name="AccountId" class="form-control">
                            <option value="null">@SystemResource.Nothing</option>
                        </select>
                    </div>
                </div>
            </div>

            <div id="Users" class="tab-pane fade">
                <div class="col-lg-12  ">
                    <table data-Sub="true" id="divUsersGrid"></table>
                </div>
            </div>

            <div id="Balance" class="tab-pane fade">
                <div class="col-12">
                    <div class="row">
                        <div id="_3omla" class="col-md-6">
                            <div class="row">
                                <div class="col-12">
                                    <div class="row">
                                        <label class="col-2"> عملة </label>
                                        <div class="col-5 text-center">
                                            <label class=" text-center "> مدين </label>
                                        </div>
                                        <div class="col-5 text-center ">
                                            <label class="text-center "> دائن </label>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-12">
                                    <div class="row">
                                        <label class="col-2 ">  الرصيد افتتاحي </label>
                                        <div class="col-5">
                                            <input id="txt_OpenningBalanceDepitCurncy" disabled name="OpenningBalanceDepitCurncy" type="number" class="form-control input-sm  text_Display ">
                                        </div>
                                        <div class="col-5">
                                            <input id="txt_OpenningBalanceCreditCurncy" disabled name="OpenningBalanceCreditCurncy" type="number" class="form-control input-sm  text_Display">
                                        </div>
                                    </div>
                                </div>

                                <div class="col-12">
                                    <div class="row">
                                        <label class="col-2 ">الحركة الحالية</label>
                                        <div class="col-5">
                                            <input id="txt_AccCurrTrancDepitCurncy" disabled name="AccCurrTrancDepitCurncy" type="number" class="form-control input-sm  text_Display ">
                                        </div>
                                        <div class="col-5">
                                            <input id="txt_AccCurrTrancCreditCurncy" disabled name="AccCurrTrancCreditCurncy" type="number" class="form-control input-sm  text_Display">
                                        </div>
                                    </div>
                                </div>

                                <div class="col-12">
                                    <div class="row">
                                        <label class="col-2 "> الاجمالي  </label>
                                        <div class="col-5">
                                            <input id="txt_AccTotalDebitCurncy" disabled name="AccTotalDebitCurncy" type="number" class="form-control input-sm  text_Display ">
                                        </div>
                                        <div class="col-5">
                                            <input id="txt_AccTotaCreditCurncy" disabled name="AccTotaCreditCurncy" type="number" class="form-control input-sm  text_Display">
                                        </div>
                                    </div>
                                </div>

                                <div class="col-12 ">
                                    <div class="row">
                                        <label class="col-2 "> الرصيد  </label>
                                        <div class="col-5">
                                            <input id="txt_BalanceDebitCurncy" disabled name="BalanceDebitCurncy" type="number" class="form-control input-sm  text_Display ">
                                        </div>
                                        <div class="col-5">
                                            <input id="txt_BalanceCreditCurncy" disabled name="BalanceCreditCurncy" type="number" class="form-control input-sm  text_Display">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div id="Ma7ali" class="col-md-6">
                            <div class="row">
                                <div class="col-12 ">
                                    <div class="row">
                                        <label class=" col-2 "> محلي </label>
                                        <div class="col-5 text-center">
                                            <label class="text-center"> مدين </label>
                                        </div>
                                        <div class="col-5 text-center">
                                            <label class="text-center"> دائن </label>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-12 ">
                                    <div class="row">
                                        <label class="col-2 ">  الرصيد افتتاحي </label>
                                        <div class="col-5">
                                            <input id="txt_OpenningBalanceDepit" disabled name="Debit" type="number" class="form-control input-sm  text_Display">
                                        </div>
                                        <div class="col-5">
                                            <input id="txt_OpenningBalanceCredit" disabled name="Openbalance" type="number" class="form-control input-sm  text_Display ">
                                        </div>
                                    </div>
                                </div>

                                <div class="col-12 ">
                                    <div class="row">
                                        <label class="col-2 ">الحركة الحالية</label>
                                        <div class="col-5">
                                            <input id="txt_AccCurrTrancDepit" disabled name="AccCurrTrancDepit" type="number" class="form-control input-sm  text_Display ">
                                        </div>
                                        <div class="col-5">
                                            <input id="txt_AccCurrTrancCredit" disabled name="AccCurrTrancCredit" type="number" class="form-control input-sm  text_Display">
                                        </div>
                                    </div>
                                </div>

                                <div class="col-12 ">
                                    <div class="row">
                                        <label class="col-2 "> الاجمالي  </label>
                                        <div class="col-5">
                                            <input id="txt_AccTotalDebit" disabled name="AccTotalDebit" type="number" class="form-control input-sm  text_Display ">
                                        </div>
                                        <div class="col-5">
                                            <input id="txt_AccTotaCredit" disabled name="AccTotaCredit" type="number" class="form-control input-sm  text_Display">
                                        </div>
                                    </div>
                                </div>

                                <div class="col-12 ">
                                    <div class="row">
                                        <label class="col-2 "> الرصيد  </label>
                                        <div class="col-5">
                                            <input id="txt_BalanceDebitLocal" disabled name="BalanceDebitLocal" type="number" class="form-control input-sm  text_Display ">
                                        </div>
                                        <div class="col-5">
                                            <input id="txt_BalanceCreditLocal" disabled name="BalanceCreditLocal" type="number" class="form-control input-sm  text_Display">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <hr style="width:99%; margin:10px auto" class="col-12" />

    <div class="col-12">
        <table data-Sub="true" id="divCurrencyGrid"></table>
    </div>
</div>


<script src="~/ClientApp/Pages/Acc/MS_BoxBank.js"></script>