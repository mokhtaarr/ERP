@using Inv.WebUI.Resources

@{
    Layout = "~/Views/Shared/Layout.cshtml";
    ViewBag.Title = SystemResource.FixedAssetClasses;
}

<div class="row">
    <div class="col-md-3 Div_Tree CustomStyleTree max-h-500 bg-white">
        <div id="left" class="col-12 span3">
            <div class="controleTree">
                <input class="form-control customInputSearch" autocomplete="off" id="Tree_search" type="text">
                <span data-toggle="collapse" class="Refrash">
                    <a id="Refrash" href="#" title="Refrash">
                        <span data-toggle="collapse">
                            <i id="RE" class="fas fa-sync-alt" style="color: #e26d09;"></i>
                        </span>
                    </a>
                </span>
            </div>
            <div id='Tree'></div>
        </div>
    </div>

    <div class="col-md-9 Div_Tree bg-white max-h-500 p-3">
        <div id="MainData" class="row">
            <div class="col-12">
                <div class="row">
                    <label class="col-md-1">الكود</label>
                    <div class="col-md-2">
                        <input id="CatCode" name="CatCode" type="text" class="form-control">
                    </div>

                    <div class="col-md-1 text-center">
                        <button type="button" class="src-btn btn btn-warning" id="btnAsset_AssetCategorySearch" name="btnSearch">
                            <i class="fa fa-search"></i>
                        </button>
                    </div>
                    
                    <label class="col-md-2">فئة جذرية</label>
                    <div class="col-md-3">
                        <select id="ParentAssetCatId" name="ParentAssetCatId"  class="form-control">
                            <option value="null"></option>
                        </select>
                    </div>
                </div>
            </div>
            

            <label class="col-md-1 text-end">اسم 1</label>
            <div class="col-md-5">
                <input id="Name1"  name="Name1" type="text" class="form-control">
            </div>
            
            <label class="col-md-1 text-end">اسم 2</label>
            <div class="col-md-5">
                <input id="Name2"  name="Name2" type="text" class="form-control">
            </div>
            
            <label class="col-lg-1 col-md-1 col-sm-1 col-md-1 ">ملاحظات </label>
            <div class="col-md-4">
                <textarea id="Remarks"  name="Remarks" type="text" class="form-control input-sm "></textarea>
            </div>
        </div>
    </div>
</div>

<script src="~/ClientApp/Pages/FixedAssets/Asset_AssetCategory.js"></script>