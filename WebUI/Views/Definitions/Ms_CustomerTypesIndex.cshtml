@using Inv.WebUI.Resources

@{
    Layout = "~/Views/Shared/Layout.cshtml";
    ViewBag.Title = SystemResource.CustomerTypes;
}

<div class="row">
    <div class="col-md-3 Div_Tree CustomStyleTree max-h-500 bg-white">
        <div id="left" class="col-12 span3">
            <div class="controleTree">
                <input class="form-control customInputSearch" autocomplete="off" id="Tree_search" type="text">
                <span data-toggle="collapse" class="Refrash">
                    <a id="Refrash" href="#" title="Refrash">
                        <span data-toggle="collapse">
                            <i id="RE" class="fas fa-sync-alt" style="color: #e26d09;"></i>
                        </span>
                    </a>
                </span>
            </div>
            <div id='Tree'></div>
        </div>
    </div>

    <div class="col-md-9 row Div_Tree bg-white max-h-500 p-3 align-content-start align-items-center">
        <label class="col-md-2">كود نوع العميل</label>
        <div class="col-md-4">
            <input id="Code" disabled name="Code" type="number" class="form-control">
        </div>

        <label class="col-md-2">النوع الرئيسي</label>

        <div class="col-md-4">
            <select id="CustomerTypeParent" name="CustomerTypeParent" disabled class="form-control">
                <option value="null"></option>
            </select>
        </div>

        <label class="col-md-1">المستوى</label>

        <div class="col-md-3">
            <input id="CustomerTypeLevel" disabled name="CustomerTypeLevel" type="number" class="form-control">
        </div>


        <div class="col-md-1">
            <button type="button" class="src-btn btn btn-warning" id="btnCustomerTypeSearch" name="btnSearch">
                <i class="fa fa-search"></i>
            </button>
        </div>

        <label class="col-md-2 text-end">1 اسم نوع العميل</label>
        <div class="col-md-4">
            <input id="DescA" disabled name="DescA" type="text" class="form-control">
        </div>
        <label class="col-md-2 text-end">2 اسم نوع العميل</label>
        <div class="col-md-4">
            <input id="DescE" disabled name="DescE" type="text" class="form-control">
        </div>

        <label class="col-md-2">نوع المستوى</label>

        <div class="col-md-4">
            <select id="CustomerTypeLevelType" name="CustomerTypeLevelType" disabled class="form-control">
                <option value="null"></option>
                <option value="1">رئيسي</option>
                <option value="2">فرعي</option>
            </select>
        </div>

        <label class="col-md-1">ملاحظات 1</label>
        <div class="col-md-7">
            <textarea id="Remarks" disabled name="Remarks" type="text" class="form-control input-sm "></textarea>
        </div>
    </div>
</div>
<script src="~/ClientApp/Pages/Definitions/Ms_CustomerTypes.js"></script>