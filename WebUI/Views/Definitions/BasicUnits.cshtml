@using Inv.WebUI.Resources

@{
    Layout = "~/Views/Shared/Layout.cshtml";
    ViewBag.Title = SystemResource.BasicUnits;
}

<div class="row">
    <div class="col-12 bg-white p-3">
        <nav>
            <div class="nav nav-tabs" id="nav-tab" role="tablist">
                <a class="nav-item nav-link active" id="nav-BasicData-tab" data-toggle="tab" href="#BasicData" role="tab" aria-controls="nav-BasicData" aria-selected="true"><i class="fas fa-book"></i> @SystemResource.BasicData</a>
                <a class="nav-item nav-link" id="nav-AttachedUnits-tab" data-toggle="tab" href="#AttachedUnits" role="tab" aria-controls="nav-AttachedUnits" aria-selected="false"><i class="fas fa-book-open"></i> @SystemResource.AttachedUnits</a>
            </div>
        </nav>

        <div class="tab-content text-center row" id="nav-tabContent">
            <input id="BasUnitId" name="BasUnitId" type="hidden">

            <div id="BasicData" class="tab-pane fade show active col-12">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-lg-3 d-flex">
                            <label>@SystemResource.Code</label>
                            <input id="UnitCode" name="UnitCode" type="text" class="form-control" placeholder="@SystemResource.Code">
                        </div>

                        <div class="col-lg-1 text-center">
                            <button type="button" class="src-btn btn btn-warning radius" id="btnProd_BasicUnitsSearch" name="btnSearch">
                                <i class="fa fa-search"></i>
                            </button>
                        </div>

                        <div class="col-lg-4 d-flex">
                            <label>@SystemResource.AutoConversionFactor</label>
                            <input id="UnittRate" name="UnittRate" type="number" class="form-control" placeholder="@SystemResource.AutoConversionFactor">
                        </div>

                        <div class="col-lg-4 d-flex">
                            <label>@SystemResource.TaxCode</label>
                            <input id="EtaxUnitCode" name="EtaxUnitCode" type="text" class="form-control" placeholder="@SystemResource.TaxCode">
                        </div>

                        <div class="col-lg-6 d-flex">
                            <label>@SystemResource.Name_Arabic </label>
                            <input id="UnitNam" name="UnitNam" type="text" class="form-control" placeholder="@SystemResource.Name_Arabic">
                        </div>

                        <div class="col-lg-6 d-flex">
                            <label>@SystemResource.Name_English </label>
                            <input id="UnitNameE" name="UnitNameE" type="text" class="form-control" placeholder="@SystemResource.Name_English">
                        </div>

                        <div class="col-md-6 d-flex">
                            <label>@SystemResource.Using </label>
                            <textarea id="Remarks" name="Remarks" class="form-control"></textarea>
                        </div> 
                        
                        <div class="col-md-6 d-flex">
                            <label>@SystemResource.GroupDescription </label>
                            <textarea id="AutoDesc" name="AutoDesc" class="form-control"></textarea>
                        </div>
                    </div>
                </div>
            </div>

            <div id="AttachedUnits" class="tab-pane fade  col-12">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-lg-12">
                            <table data-Sub class="col-12" id="UnitsDetailsGrid"></table>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>

    <div class="col-12 bg-white mt-4 pt-4 pb-2">
        <h4 class="col-12 font-weight-bold text-primary text-center"><i class="glyphicon glyphicon-hand-up"></i> @SystemResource.App_DoubleDisplay <i class="glyphicon glyphicon-hand-up"></i></h4>
        <table data-main class="col-12" id="UnitsGrid"></table>
    </div>
</div>

<script src="~/ClientApp/Pages/Definitions/Prod_BasicUnits.js"></script>