@using Inv.WebUI.Resources

@{
    Layout = "~/Views/Shared/Layout.cshtml";
    ViewBag.Title = SystemResource.SuppliersTypes;
}

<div class="row">
    <div class="col-md-3 Div_Tree CustomStyleTree max-h-500 bg-white">
        <div id="left" class="col-12 span3">
            <div class="controleTree">
                <input class="form-control customInputSearch" autocomplete="off" id="Tree_search" type="text">
                <span data-toggle="collapse" class="Refrash">
                    <a id="Refrash" href="#" title="Refrash">
                        <span data-toggle="collapse">
                            <i id="RE" class="fas fa-sync-alt" style="color: #e26d09;"></i>
                        </span>
                    </a>
                </span>
            </div>
            <div id='Tree'></div>
        </div>
    </div>

    <div class="col-md-9 Div_Tree bg-white max-h-500 p-3 border border-1 rounded">
        <div class="row">
            <label class="col-md-1">كود نوع المورد</label>
            <div class="col-md-2">
                <input id="Code" disabled name="Code" type="number" class="form-control input-sm text_Display">
            </div>

            <div class="col-md-1">
                <button type="button" class="src-btn btn btn-warning" id="btnVendorTypeSearch" name="btnSearch">
                    <i class="fa fa-search"></i>
                </button>
            </div>

            <label class="col-md-1">النوع الرئيسي</label>
            <div class="col-md-3">
                <select id="VendorTypeParent" name="VendorTypeParent" disabled class="form-control input-sm text_Display">
                    <option value="null"></option>
                </select>
            </div>

            <label class="col-md-1">المستوى</label>
            <div class="col-md-3">
                <input id="VendorTypeLevel" disabled name="VendorTypeLevel" type="number" class="form-control input-sm text_Display">
            </div>

            <label class="col-md-2 text-end">اسم نوع المورد 1</label>
            <div class="col-md-3">
                <input id="DescA" disabled name="DescA" type="text" class="form-control input-sm text_Display">
            </div>
            <label class="col-md-2 text-end">اسم نوع المورد 2</label>
            <div class="col-md-3">
                <input id="DescE" disabled name="DescE" type="text" class="form-control input-sm text_Display">
            </div>

        </div>

        <div class="row mt-3">
            <label class="col-md-1">نوع المستوى</label>
            <div class="col-md-3">
                <select id="VendorTypeLevelType" name="VendorTypeLevelType" disabled class="form-control input-sm text_Display">
                    <option value="null"></option>
                    <option value="1">رئيسي</option>
                    <option value="2">فرعي</option>
                </select>
            </div>

            <label class="col-md1">ملاحظات 1</label>
            <div class="col-md-5">
                <textarea id="Remarks" disabled name="Remarks" type="text" class="form-control"></textarea>
            </div>
        </div>
    </div>
</div>
<script src="~/ClientApp/Pages/Definitions/Ms_VendorTypes.js"></script>