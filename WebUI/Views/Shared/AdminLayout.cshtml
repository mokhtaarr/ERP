        #btnclosefooter {
            position: absolute;
            z-index: 25;
            cursor: pointer;
            border-radius: 30px;
            border: solid 2px;
            background-color: #0b6ba2;
            color: #fff;
            left: 3%;
        }

        .stfooter {
            position: absolute;
            background-color: rgba(0, 0, 0, 0.7);
            height: 44px;
            /* width: 50%; */
            display: block;
            margin: 10px 0px 0px 16px;
            border-radius: 20px;
            z-index: 999;
            color: white;
            left: 5%;
        }
