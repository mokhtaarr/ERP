    <style>
        body {
            font-family: "Helvetica Neue",Helvetica,Arial,sans-serif;
            font-size: 13px;
            line-height: 1.42857143;
            color: #333;
            background-color: unset;
        }
        .stfooter {
            margin: -15px -12px;
        }

        #btnclosefooter {
            margin: 16px -41px;
